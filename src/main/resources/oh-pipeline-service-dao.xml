<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- DAOs -->
    <bean id="projectReadDao" class="sk.openhouse.pipelineservice.dao.impl.ProjectReadDaoImpl">
        <constructor-arg name="dataSource" ref="dataSource" />
    </bean>

    <bean id="projectWriteDao" class="sk.openhouse.pipelineservice.dao.impl.ProjectWriteDaoImpl">
        <constructor-arg name="dataSource" ref="dataSource" />
    </bean>

    <bean id="versionReadDao" class="sk.openhouse.pipelineservice.dao.impl.VersionReadDaoImpl">
        <constructor-arg name="dataSource" ref="dataSource" />
    </bean>

    <bean id="versionWriteDao" class="sk.openhouse.pipelineservice.dao.impl.VersionWriteDaoImpl">
        <constructor-arg name="dataSource" ref="dataSource" />
    </bean>

    <bean id="buildReadDao" class="sk.openhouse.pipelineservice.dao.impl.BuildReadDaoImpl">
        <constructor-arg name="dataSource" ref="dataSource" />
    </bean>

    <bean id="buildWriteDao" class="sk.openhouse.pipelineservice.dao.impl.BuildWriteDaoImpl">
        <constructor-arg name="dataSource" ref="dataSource" />
    </bean>

    <bean id="phaseReadDao" class="sk.openhouse.pipelineservice.dao.impl.PhaseReadDaoImpl">
        <constructor-arg name="dataSource" ref="dataSource" />
    </bean>

    <bean id="phaseWriteDao" class="sk.openhouse.pipelineservice.dao.impl.PhaseWriteDaoImpl">
        <constructor-arg name="dataSource" ref="dataSource" />
    </bean>

    <bean id="buildPhaseReadDao" class="sk.openhouse.pipelineservice.dao.impl.BuildPhaseReadDaoImpl">
        <constructor-arg name="dataSource" ref="dataSource" />
    </bean>

    <bean id="buildPhaseWriteDao" class="sk.openhouse.pipelineservice.dao.impl.BuildPhaseWriteDaoImpl">
        <constructor-arg name="dataSource" ref="dataSource" />
    </bean>
</beans>